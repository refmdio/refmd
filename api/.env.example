# RefMD API example environment
# HTTP API port
API_PORT=8888

# CORS allowed origin for the SPA (e.g., Vite dev server)
FRONTEND_URL=http://localhost:3000

# External origin serving the API (e.g. https://example.com)
BACKEND_URL=http://localhost:8888

# Database
DATABASE_URL=postgres://refmd:refmd@localhost:5432/refmd

# Auth
JWT_SECRET=development-secret-change-me
JWT_EXPIRES_SECS=3600

# CRDT snapshots & GC
SNAPSHOT_INTERVAL_SECS=300
SNAPSHOT_KEEP_VERSIONS=5
UPDATES_KEEP_WINDOW=500

# Storage locations
UPLOADS_DIR=./uploads
PLUGINS_DIR=./plugins
